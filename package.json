{
  "name": "faltas-app",
  "version": "1.0.0",
  "main": "main.js",
  "productName": "Informe de faltas",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "postinstall": "electron-builder install-app-deps",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "npm run build && electron .",
    "package": "electron-builder -c.npmRebuild=false",

    "build:linux": "npm run build && electron-builder --linux --x64 -c.npmRebuild=false",
    "build:win": "npm run build && electron-builder --win --x64 -c.npmRebuild=false",
    "build:mac": "npm run build && electron-builder --mac --x64 -c.npmRebuild=false",
    "build:all": "npm run build && electron-builder --win --linux --mac -c.npmRebuild=false"
  },
  "build": {
    "appId": "com.mesanchez.faltasapp",
    "productName": "Gestor de Faltas",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*",
      "**/node_modules/@napi-rs/canvas/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "database/**/*",
      "node_modules/**/*",
      "!node_modules/@napi-rs/canvas-android-**"
    ],
    "win": {
      "target": ["portable"],
      "icon": "public/favicon.png",
      "files": [
        "!node_modules/@napi-rs/canvas-darwin-**",
        "!node_modules/@napi-rs/canvas-linux-**"
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "public/favicon.png",
      "executableArgs": ["--no-sandbox"],
      "files": [
        "!node_modules/@napi-rs/canvas-win32-**",
        "!node_modules/@napi-rs/canvas-darwin-**"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "files": [
        "!node_modules/@napi-rs/canvas-win32-**",
        "!node_modules/@napi-rs/canvas-linux-**"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@primeuix/themes": "^2.0.2",
    "better-sqlite3": "^12.5.0",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "pdfjs-dist": "5.4.149",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^20.4.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.0",
    "@electron/rebuild": "^4.0.2",
    "@types/jasmine": "~5.1.0",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-rebuild": "^3.2.9",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  }
}